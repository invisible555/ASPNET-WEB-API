@model IEnumerable<Projekt.Model.Entities.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null)
{
        
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author.Name</td>
                <td>@item.Publisher.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
        }
    </tbody>
</table>